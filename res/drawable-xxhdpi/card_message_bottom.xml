<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape
          xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@color/card_message" />
            <corners android:bottomLeftRadius="2.0dip" android:bottomRightRadius="2.0dip" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape
          xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@color/card_message_selected" />
            <corners android:bottomLeftRadius="2.0dip" android:bottomRightRadius="2.0dip" />
        </shape>
    </item>
</selector>